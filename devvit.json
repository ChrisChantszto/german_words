{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "deutsch-matching",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {},
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "deutsch-matching",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      },
      {
        "label": "Test Redis Words",
        "description": "Test the Redis word storage",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/test-redis"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "permissions": {
    "redis": true,
    "http": {
      "enable": true,
      "domains": [
        "api.open-thesaurus.de",
        "random-words-api.kushcreates.com"
      ]
    }
  },
  "dev": {
    "subreddit": "deutsch_matching_dev"
  }
}
